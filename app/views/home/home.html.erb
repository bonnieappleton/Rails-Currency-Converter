<h1>Currency Converter</h1>
<p>Enter an amount and select the currencies you want to convert from and to.</p>

<%= form_tag("/", :method => :get) do %>
  <p>
    <%= label_tag :date %><br>
    <%= select_date %>
  </p>
 
  <p>
    <%= label_tag :amount %><br>
    <%= number_field_tag :amount %>
  </p>
  
  <p>
    <%= label_tag :from %><br>
    <%= select_tag :from, options_for_select(@currencies) %>
  </p>
  
  <p>
    <%= label_tag :to %><br>
    <%= select_tag :to, options_for_select(@currencies) %>
  </p>
   
  <p>
    <%= submit_tag("Convert") %>
  </p>
<% end %>

<% if @converted_amount %>
  <div>
    <p><%= @amount %> <%= @from %> = <%= @converted_amount %> <%= @to %> on <%= @formatted_date %></p>
  </div>
<% end %>

